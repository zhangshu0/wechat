<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="zss.wechat.dao.MaterialDao">
	<resultMap id="BaseResultMap" type="zss.wechat.model.Material">
	    <id column="id" jdbcType="INTEGER" property="id" />
	    <result column="name" jdbcType="VARCHAR" property="name" />
    </resultMap>
	<!--************************************************************************************-->
	<!-- CRUD of table : material -  -->
	<!--************************************************************************************-->
	
	<insert id="addEntity" parameterType="Material" useGeneratedKeys="true" keyProperty="id">
    	insert into material (
   		<trim prefix="" suffix=")" suffixOverrides=",">
			<if test="name != null">
				name,
			</if>
		</trim>
		values (
		<trim prefix="" suffix=")" suffixOverrides=",">
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
		</trim>
		<selectKey resultType="INTEGER" keyProperty="id" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateEntity" parameterType="Material">
	update material
	<set>
		<if test="name != null ">
			name = #{name,jdbcType=VARCHAR},
		</if>
	</set>
	where id = #{id,jdbcType=INTEGER}
</update>


	<delete id="deleteEntity" parameterType="Material">
	   	delete from material where ID = #{id,jdbcType=INTEGER}
	</delete>
	
	<select id="findEntityById" parameterType="Material" resultMap="BaseResultMap">
	    select * from material where ID = #{id,jdbcType=INTEGER}
	</select>
	
	<select id="findMaxId" resultType="Integer">
	    select max(id) from material
	</select>
	
	<select id="findEntityListByCondForUp" parameterType="Material" resultMap="BaseResultMap">
		select * from material a
		<where >
			<if test="id != null">
				and a.ID = #{id,jdbcType=INTEGER}
			</if>
			<if test="name != null and name != ''">
				and a.name = #{name,jdbcType=VARCHAR}
			</if>
		</where>
		 for update
	</select>
	
	<select id="findEntityByIdLock" parameterType="Material" resultMap="BaseResultMap">
	    select * from material where ID = #{id,jdbcType=INTEGER} for update
	</select>
	
	
	<select id="findEntityListByCond" parameterType="java.util.Map" resultMap="BaseResultMap">
	    select * from material a
	  	<where >
			<if test="id != null">
				and a.ID = #{id,jdbcType=INTEGER}
			</if>
			<if test="name != null and name != ''">
				and a.name = #{name,jdbcType=VARCHAR}
			</if>
		</where>
	    order by a.ID desc
	</select>

	<select id="getAllMaterialList" resultMap="BaseResultMap">
	    select * from material order by ID desc
	</select>
</mapper>

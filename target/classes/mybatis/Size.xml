<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="zss.wechat.dao.SizeDao">
	<resultMap id="BaseResultMap" type="zss.wechat.model.Size">
	    <id column="id" jdbcType="INTEGER" property="id" />
	    <result column="size" jdbcType="VARCHAR" property="size" />
    </resultMap>
	<!--************************************************************************************-->
	<!-- CRUD of table : size -  -->
	<!--************************************************************************************-->
	
	<insert id="addEntity" parameterType="Size" useGeneratedKeys="true" keyProperty="id">
    	insert into size (
   		<trim prefix="" suffix=")" suffixOverrides=",">
			<if test="size != null">
				size,
			</if>
		</trim>
		values (
		<trim prefix="" suffix=")" suffixOverrides=",">
			<if test="size != null">
				#{size,jdbcType=VARCHAR},
			</if>
		</trim>
		<selectKey resultType="INTEGER" keyProperty="id" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateEntity" parameterType="Size">
	update size
	<set>
		<if test="size != null ">
			size = #{size,jdbcType=VARCHAR},
		</if>
	</set>
	where id = #{id,jdbcType=INTEGER}
</update>


	<delete id="deleteEntity" parameterType="Size">
	   	delete from size where ID = #{id,jdbcType=INTEGER}
	</delete>
	
	<select id="findEntityById" parameterType="Size" resultMap="BaseResultMap">
	    select * from size where ID = #{id,jdbcType=INTEGER}
	</select>
	
	<select id="findMaxId" resultType="Integer">
	    select max(id) from size
	</select>
	
	<select id="findEntityListByCondForUp" parameterType="Size" resultMap="BaseResultMap">
		select * from size a
		<where >
			<if test="id != null">
				and a.ID = #{id,jdbcType=INTEGER}
			</if>
			<if test="size != null and size != ''">
				and a.size = #{size,jdbcType=VARCHAR}
			</if>
		</where>
		 for update
	</select>
	
	<select id="findEntityByIdLock" parameterType="Size" resultMap="BaseResultMap">
	    select * from size where ID = #{id,jdbcType=INTEGER} for update
	</select>
	
	
	<select id="findEntityListByCond" parameterType="java.util.Map" resultMap="BaseResultMap">
	    select * from size a
	  	<where >
			<if test="id != null">
				and a.ID = #{id,jdbcType=INTEGER}
			</if>
			<if test="size != null and size != ''">
				and a.size = #{size,jdbcType=VARCHAR}
			</if>
		</where>
	    order by a.ID desc
	</select>

	<select id="getAllSizeList" resultMap="BaseResultMap">
	    select * from size order by ID desc
	</select>
</mapper>
